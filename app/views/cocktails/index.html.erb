<%= render 'shared/navbar'%>
<div class="home-banner">
  <h1>Les cocktails de grecos</h1>
</div>
<div class="container">
<div class="info">
  <h2> Liste des cocktails </h2>
</div>
<div class="grid">
  <%@cocktails.each do |item| %>
  <div class="flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front">
       <div class="cocktail-card" style="background-image : linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url( <%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>); background-size: cover; background-position-y: -286px;">
        <%= link_to item.name, cocktail_path(item) %>
    </div>
      </div>
      <div class="flip-card-back"  style="background-image : linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.9)),  url( <%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>); background-size: cover;">
      <div class="title" style="background-image : linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)),  url( <%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>); background-size: cover;">
        <img class="icon-title" src =<%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>>
        <%= item.name %>
      </div>
      <div class="content">
        <% item.doses.each do |dose| %>
          <div class=ig-list>
           <%= dose.description %>
          </div>
          <%end %>
        </div>
        <div class="end">
          <%= link_to 'Voir', cocktail_path(item), class: 'btn btn-primay' %>
          </div>
      </div>
    </div>
  </div>

  <% end %>
</div>
</div>
